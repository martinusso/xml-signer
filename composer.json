{
    "name": "martinusso/xml-signer",
    "type": "library",
    "description": "XML Signer allows you to sign XML documents ",
    "keywords": [
        "xml",
        "signer",
        "certificate"
    ],
    "homepage": "https://github.com/martinusso/xml-signer",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Breno Borges Martinusso",
            "email": "martinusso@gmail.com",
            "homepage": "http://martinusso.github.io/xml-signer",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-dom": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
          "XmlSigner\\": "src/XmlSigner/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XmlSigner\\Tests\\": "tests/XmlSigner/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "cs": "phpcs --standard=PSR2 src",
        "test": "phpunit -c phpunit.xml",
    		"test-cover": "phpunit --coverage-text"
    }
}
